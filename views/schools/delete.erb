<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="">

    <title>SchoolRecorder BETA</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/css/jumbotron-narrow.css" rel="stylesheet">
    <link href="/css/datepicker.css" rel="stylesheet">

  </head>

  <body>

    <div class="container">
      <div class="header">
        <ul class="nav nav-pills pull-right">
          <li class="active"><a href="/events">All Schools</a></li>
          <li><a href="/events">Try ScrappyBook</a></li>
        </ul>
        <h3 class="text-muted">Learn to Track Your Learning</h3>
      </div>

      <div class="jumbotron">
        <form action="/schools/<%= @school.id %>" method="post" role="form">
        <div class="panel panel-default">
          <!-- Default panel contents -->
          <div class="panel-heading"><h1>Delete <%= @school.name %>?</h1></div>
          <div class="panel-body">
            <p><%= @school.year_begin %> to <%= @school.year_end %></p>
          </div>

          <!-- List group -->
          <ul class="list-group">
            <li class="list-group-item input-bottom"><%= @school.state %></li>
          </ul>
        </div>
        
        <div class="btn-group btn-group-justified">
          <button class="btn btn-danger" type="submit" name="_method" value="delete" id="back_button" style="width:33%;">Delete</button>

          <a href="/schools/<%= @school.id %>"><button class="btn btn-primary" type="button" id="back_button" style="width:33%;">Back</button></a>
        </div>
        </form>
        
      </div>
    
      <div class="footer">
        <p>&copy; SchoolRecorder, David Hunt 2014</p>
      </div>

    </div>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/bootstrap.js"></script>
    
    <!-- Placed at the end of the document so the pages load faster -->
  </body>
</html>
